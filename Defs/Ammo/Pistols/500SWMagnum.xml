<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_500SWMagnum</defName>
		<label>.500 S&amp;W Magnum</label>
		<ammoTypes>
			<li>Ammo_500SWMagnum_FMJ</li>
			<li>Ammo_500SWMagnum_HP</li>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="500SWMagnumBase" ParentName="AmmoBase" Abstract="True">
		<description>The .500 S&amp;W Magnum (12.7×41mmSR) is a fifty-caliber semi-rimmed handgun cartridge developed by Cor-Bon in partnership with the Smith &amp; Wesson. Its primary design purpose was as a hunting handgun cartridge capable of taking all North American game species.</description>
		<statBases>
			<Mass>0.04</Mass>
			<Bulk>0.04</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo500SWMagnum</li>
		</thingCategories>
	</ThingDef>
	
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="500SWMagnumBase">
		<defName>Ammo_500SWMagnum_FMJ</defName>
		<label>.500 S&amp;W Magnum cartridge (FMJ)</label>
		<graphicData>
			<texPath>Things/Ammo/Pistol/FMJ</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.17</MarketValue>
		</statBases>
		<linkedProjectile>Bullet_500SWMagnum_FMJ</linkedProjectile>
		<ammoClass>FullMetalJacket</ammoClass>
	</ThingDef>
	
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="500SWMagnumBase">
		<defName>Ammo_500SWMagnum_HP</defName>
		<label>.500 S&amp;W Magnum cartridge (HP)</label>
		<graphicData>
			<texPath>Things/Ammo/Pistol/HP</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.16</MarketValue>
		</statBases>
		<linkedProjectile>Bullet_500SWMagnum_HP</linkedProjectile>
		<ammoClass>HollowPoint</ammoClass>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base500SWMagnumBullet" ParentName="BaseBullet" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Bullet_Big</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<speed>120</speed>
			<dropsCasings>true</dropsCasings>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base500SWMagnumBullet">
		<defName>Bullet_500SWMagnum_FMJ</defName>
		<label>.500 Smith Wessen Magnum bullet (FMJ)</label>
		<projectile>
			<damageAmountBase>28</damageAmountBase>
			<armorPenetration>0.40</armorPenetration>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base500SWMagnumBullet">
		<defName>Bullet_500SWMagnum_HP</defName>
		<label>.500 Smith Wessen Magnum bullet (HP)</label>
		<projectile>
			<damageAmountBase>31</damageAmountBase>
			<armorPenetration>0.35</armorPenetration>
		</projectile>
	</ThingDef>
  
 <!-- ==================== Recipes ========================== -->

  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_500SWMagnum_FMJ</defName>
    <label>make .500 S&amp;W Magnum cartridge x200</label>
    <description>Craft 200 .500 S&amp;W Magnum cartridges.</description>
    <jobString>Making .500 S&amp;W Magnum cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_500SWMagnum_FMJ>200</Ammo_500SWMagnum_FMJ>
    </products>
  </RecipeDef>

  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_500SWMagnum_HP</defName>
    <label>make .500 S&amp;W Magnum cartridge x200</label>
    <description>Craft 200 .500 S&amp;W Magnum cartridges.</description>
    <jobString>Making .500 S&amp;W Magnum cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>14</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_500SWMagnum_HP>200</Ammo_500SWMagnum_HP>
    </products>
  </RecipeDef>
	
</Defs>